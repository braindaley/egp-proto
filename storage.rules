rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures - users can upload their own, anyone can read
    match /profile-pictures/{fileName} {
      allow read: if true;  // Public read for profile pictures
      allow write: if request.auth != null
                   && fileName.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Must be an image
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
