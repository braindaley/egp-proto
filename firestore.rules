
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access only to the 'cached_bills' collection.
    // This is safe for this specific collection as it only contains publicly available bill data.
    match /cached_bills/{billId} {
      allow read, write: if true;
    }

    // Deny all access to any other collections by default.
    // This ensures that other parts of your database remain secure.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
